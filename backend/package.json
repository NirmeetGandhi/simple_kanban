{
  "name": "backend",
  "version": "1.0.0",
  "description": "Node.js API backend",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "env-cmd -f ./config/dev.env node dist/app.js",
    "dev": "env-cmd -f ./config/dev.env nodemon --exec \"tsc && node dist/app.js\" --ext ts --watch src",
    "dev:ts-node": "env-cmd -f ./config/dev.env ts-node -r tsconfig-paths/register src/app.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "validator": "^13.9.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/validator": "^13.11.7",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
